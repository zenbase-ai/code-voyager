{
  "hooks": [
    {
      "event": "SessionStart",
      "script": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/session_start.py",
      "timeout": 10000
    },
    {
      "event": "PreCompact",
      "script": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/pre_compact.py",
      "timeout": 20000
    },
    {
      "event": "SessionEnd",
      "script": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/session_end.py",
      "timeout": 20000
    },
    {
      "event": "PostToolUse",
      "script": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/post_tool_use.py",
      "timeout": 5000,
      "matcher": {
        "tool_name": "*"
      }
    }
  ]
}
